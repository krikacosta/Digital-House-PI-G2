<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="/css/novo_produto.css">
	<link rel="stylesheet" href="/css/loginCliente.css">
    <title>ArtPet&Cia</title>
</head>

<body class="container">

    <%- include("../../components/header.ejs") %>

    <main class="container">

        <%- include("../../components/navbartexto.ejs") %>
    
        <div class="novoProd">
            <h1>Editar Produto - ID <%= Produto.ID %> - <%= Produto.NOME_PRODUTO %></h1>
            
                          
        </div>
    
    <form action="/admin/produtos/<%= Produto.ID %>/editar?_method=PUT" method="POST">

        <div class="gridNovoProd">
            <div class="primeiraColuna">

                <label for="nome_produto">Nome Produto</label>
                <input type="text" class="form-control" name="nome_produto" id="nome_produto" value="<%= Produto.NOME_PRODUTO %>">

                <label for="categoria_id">Categoria</label>
                <select id="categoria_id" name="categoria_id" class="camposselect" >

                    <% if(Produto.CATEGORIA_ID == 1) { %>
                        <option value="1">CAES</option>
                        <option value="2">GATOS</option>
                        <option value="3">PEIXES</option>
                        <option value="4">AVES</option>
                        <option value="5">OUTROS PETS</option>
                        <option value="6">ACESSORIOS</option>

                        <% } else if(Produto.CATEGORIA_ID == 2) { %>
                        <option value="2">GATOS</option>
                        <option value="1">CAES</option>
                        <option value="3">PEIXES</option>
                        <option value="4">AVES</option>
                        <option value="5">OUTROS PETS</option>
                        <option value="6">ACESSORIOS</option>

                        <% } else if(Produto.CATEGORIA_ID == 3) { %>
                        <option value="3">PEIXES</option>
                        <option value="1">CAES</option>
                        <option value="2">GATOS</option>
                        <option value="4">AVES</option>
                        <option value="5">OUTROS PETS</option>
                        <option value="6">ACESSORIOS</option>

                        <% } else if(Produto.CATEGORIA_ID == 4) { %>
                        <option value="4">AVES</option>
                        <option value="1">CAES</option>
                        <option value="2">GATOS</option>
                        <option value="3">PEIXES</option>
                        <option value="5">OUTROS PETS</option>
                        <option value="6">ACESSORIOS</option>

                        <% } else if(Produto.CATEGORIA_ID == 5) { %>
                        <option value="5">OUTROS PETS</option>
                        <option value="1">CAES</option>
                        <option value="2">GATOS</option>
                        <option value="3">PEIXES</option>
                        <option value="4">AVES</option>
                        <option value="6">ACESSORIOS</option>

                        <% } else if(Produto.CATEGORIA_ID == 6) { %>
                        <option value="6">ACESSORIOS</option>
                        <option value="1">CAES</option>
                        <option value="2">GATOS</option>
                        <option value="3">PEIXES</option>
                        <option value="4">AVES</option>
                        <option value="5">OUTROS PETS</option>

                        <% } %>

                  
                 
                    </select>
               

                <label for="preco">Preço</label>
                <input type="number" class="form-control" name="preco" id="preco" step="0.01" value="<%= Produto.PRECO %>">

                <label for="imagem_url">Imagem Url</label>
                
                <input type="imagem_url" class="form-control" name="imagem_url" id="imagem_url" value="<%= Produto.IMAGEM_URL %>">
                                    <!-- <textarea name="imagem_url" id="imagem_url" rows="5" cols="33"><%= Produto.IMAGEM_URL %></textarea> -->
            
                <img
                style="width: 100px; height: 100px"
                src="<%= Produto.IMAGEM_URL %>"
                alt="<%= Produto.NOME_PRODUTO%>"
            />
        
            </div>
            
            <div class="segundaColuna">
                
                <label for="promocao">Promocao</label>
                	<select id="promocao" name="promocao" class="camposselect">
                        <% if(Produto.PROMOCAO == 'NAO') { %>
                        <option value="<%= Produto.PROMOCAO %>"><%= Produto.PROMOCAO %></option>
                        <option value="SIM">SIM</option>
                        <% } else { %>
                        <option value="<%= Produto.PROMOCAO %>"><%= Produto.PROMOCAO %></option>
						<option value="NAO">NAO</option>
                        <% } %>
					</select>
		
                <label for="destaque">Destaque</label>
                <select id="destaque" name="destaque" class="camposselect" value="<%= Produto.DESTAQUE %>">
                    <% if(Produto.DESTAQUE == 'NAO') { %>
                    <option value="<%= Produto.DESTAQUE %>"><%= Produto.DESTAQUE %></option>
                    <option value="SIM">SIM</option>
                    <% } else { %>
                    <option value="<%= Produto.DESTAQUE %>"><%= Produto.DESTAQUE %></option>    
                    <option value="NAO">NAO</option>
                    <% } %>
                </select>

                <label for="estoque">Estoque</label>
                <select id="estoque" name="estoque" class="camposselect" value="<%= Produto.ESTOQUE %>">
                <% if(Produto.ESTOQUE == 'NAO') { %>
                    <option value="<%= Produto.ESTOQUE %>"><%= Produto.ESTOQUE %></option>
                    <option value="SIM">SIM</option>
                    <% } else { %>
                    <option value="<%= Produto.ESTOQUE %>"><%= Produto.ESTOQUE %></option>
                    <option value="NAO">NAO</option>
                    <% } %>
                </select>

                <label for="ativo">Ativo</label>
                <select id="ativo" name="ativo" class="camposselect" value="<%= Produto.ATIVO %>">
                    <% if(Produto.ATIVO == 'NAO') { %>
                    <option value="<%= Produto.ATIVO %>"><%= Produto.ATIVO %></option>
                    <option value="SIM">SIM</option>
                    <% } else { %>
                    <option value="<%= Produto.ATIVO %>"><%= Produto.ATIVO %></option>
                    <option value="NAO">NAO</option>
                    <% } %>
                </select>

                <input type="hidden" class="form-control" name="id" id="id"	value="<%= Produto.ID %>">
            
            </div>
            

        </div>

    </div>
    <div class="descricaoProd">
        <label for="descricao">Descrição do Produto</label>
        <textarea name="descricao" id="descricao" rows="5" cols="33"><%= Produto.DESCRICAO %></textarea>
    </div>
    <div class="buttonEnviar">
        <button type="submit">Salvar</button>
    </div>
</form>


</main>
<%- include("../../components/footer.ejs") %>

</body>

</html>
