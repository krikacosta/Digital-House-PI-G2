<!DOCTYPE html>
<html lang="pt-BR">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />

		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
			rel="stylesheet"
			integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
			crossorigin="anonymous"
		/>

		<title>Admin | Produtos</title>
	</head>
	<body>
		<main>
			<section
				class="d-flex flex-column justify-content-center align-items-center w-100"
			>
				<h1>Produtos</h1>
				<button class="btn btn-info">
					<a href="/admin/produtos/create">Cadastrar novo produto</a>
				</button>

				<table class="table table-dark table-striped table-hover w-75">
					<thead>
						<tr>
							<th scope="col">ID</th>
							<th scope="col">Categoria</th>
							<th scope="col">Nome</th>
							<th scope="col">Descrição</th>
							<th scope="col">Preço</th>
							<th scope="col">Imagem</th>
							<th scope="col">Promoção</th>
							<th scope="col">Destaque</th>
							<th scope="col">Sem Estoque</th>
							<th scope="col">Ativo/Inativo</th>
							<th scope="col">Ações</th>
						</tr>
					</thead>
					<tbody>
						<% for(let produto of produtos) { %>
						<tr>
							<th scope="row"><%= produto.ID %></th>
							<td><%= produto.CATEGORIA_ID %></td>
							<td><%= produto.NOME_PRODUTO %></td>
							<td><%= produto.DESCRICAO %></td>
							<td><%= produto.PRECO %></td>
							<td>
								<img
									style="width: 100px; height: 100px"
									src="<%= produto.IMAGEM_URL%>"
									alt="<%=produto.NOME_PRODUTO%>"
								/>
							</td>
							<td><%= produto.PROMOCAO %></td>
							<td><%= produto.DESTAQUE %></td>
							<td><%= produto.SEM_ESTOQUE%></td>
							<td><%= produto.ATIVO %></td>

							<td>
								<div>
									<button class="btn btn-primary">
										<a
											href="/admin/produtos/<%=produto.ID%>/edit"
											>Editar</a
										>
									</button>

									<form
										action="/admin/produtos/<%= produto.ID %>/delete?_method=DELETE"
										method="POST"
									>
										<button
											class="btn btn-danger"
											type="submit"
										>
											Excluir
										</button>
									</form>
								</div>
							</td>
						</tr>
						<% } %>
					</tbody>
				</table>
			</section>
		</main>

		<script
			src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
			
		></script>
	</body>
</html>
