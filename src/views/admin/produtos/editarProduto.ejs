<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="css/editar_produto.css">
    <link rel="stylesheet" href="css/loginCliente.css">
    <title>ArtPet&Cia</title>
</head>

<body class="container">

    <%- include("./components/header.ejs") %>

    <main class="container">

        <%- include("./components/navbartexto.ejs") %>
    
    <div class="editarProd">
        <h1>Editar Produto</h1>
    </div>
    
    <form class="editarProduto">

        <div class="gridEditarProd">
            <div class="primeiraColuna">
    
                <label for="codProduto">Código Produto</label>
                <input type="text" name="codProduto" id="codProduto">

                <label for="categoria">Categoria</label>
                <input type="text" name="categoria" id="categoria">

                <label for="produto">Produto</label>
                <input type="text" name="produto" id="produto">

                <label for="tamanho">Tamanho</label>
                <input type="text" name="tamanho" id="tamanho">

                <label for="cor">Cor</label>
                <input type="text" name="cor" id="cor">

            </div>
            
            <div class="segundaColuna">

                <label for="preco">Preço</label>
                <input type="text" name="preco" id="preco">

                <label for="quantidade">Quantidade</label>
                <input type="text" name="quantidade" id="quantidade">

                <div class="checkbox">
                    <input type="checkbox" name="promocao" id="promocao">
                    <label for="promocao">Promoção</label>
                </div>
            
                <div class="checkbox">
                    <input type="checkbox" name="destaque" id="destaque">
                    <label for="destaque">Destaque</label>
                </div>
                
                <div class="checkbox">
                    <input type="checkbox" name="semEstoque" id="semEstoque">
                    <label for="semEstoque">Sem Estoque</label>
                </div>
                
                <div class="image">
                <label for="image">Imagem</label>
                <input type="file" name="imagem" id="imagem" accept="image/*">
                </div>

            </div>

        </div>
        <div class="descricaoProd">
            <label for="descricao">Descrição do Produto</label>
            <textarea name="descricao" id="descricao" rows="5" cols="33"></textarea>
        </div>
        <div class="buttonEnviar">
            <button type="submit">Salvar</button>
        </div>
    </form>
        
       
    </main>

    <%- include("./components/footer.ejs") %>

</body>

</html>